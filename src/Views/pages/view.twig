{% extends 'front-template.twig' %}

{% block title %}Latest Posts{% endblock %}

{% block content %}
    <section class="site-section pt-5">
        <div class="container">
            <div class="row mb-4">
                <div class="col-md-6">
                    {% if category is defined %}
                        <h2 class="mb-4">Category: {{ category.getName }}</h2>
                        <p>{{ category.getDescription }}</p>
                    {% elseif tag is defined %}
                        <h2 class="mb-4">Tag: {{ tag.getTitle }}</h2>
                    {% elseif search is defined %}
                        <h2 class="mb-4">Search: {{ search }}</h2>
                    {% endif %}
                </div>
            </div>
            <div class="row blog-entries">
                <div class="col-md-12 col-lg-8 main-content">
                    <div class="row mb-5 mt-5">

                        <div class="col-md-12">

                            {% for post in posts %}
                                <div class="post-entry-horzontal">
                                    <a href="/{{ post.getSlug }}">
                                        <div class="image element-animate" data-animate-effect="fadeIn"
                                             style="background-image: url({{ post.getImage }});"></div>
                                        <span class="text">
                                        <div class="post-meta">
                                            <span class="author mr-2">
                                                <img src="{{ post.getAuthor.getAvatar }}" alt="{{ post.getAuthor.getName }}">
                                                {{ post.getAuthor.getName }}
                                            </span> &bullet;
                                            <span class="mr-2">{{ post.getPublishedAt | date("M d, Y") }} </span>
                                        </div>
                                        <h2>{{ post.getTitle }}</h2>
                                    </span>
                                    </a>
                                </div>
                            {% endfor %}


                            <!-- END post -->


                            <!-- END post -->

                                        <!-- END post -->

                            <!-- END post -->

                        </div>
                    </div>

                    <div class="row mt-5">
                        <div class="col-md-12 text-center">
                            <nav aria-label="Page navigation" class="text-center">
                                <ul class="pagination">
                                    <li class="page-item  active"><a class="page-link" href="#">&lt;</a></li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                                    <li class="page-item"><a class="page-link" href="#">5</a></li>
                                    <li class="page-item"><a class="page-link" href="#">&gt;</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>


                </div>

                <!-- END main-content -->

                {% include 'partial/front-sidebar.twig' %}


            </div>
        </div>
    </section>

{% endblock %}