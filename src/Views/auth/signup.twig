{% extends 'template.twig' %}

{% block head %}
    <link rel="stylesheet" href="/assets/auth.css">
{% endblock %}

{% import 'utils.twig' as forms %}
{#{% macro input(name, value, label, type = "text") %}#}

{% block content %}
    <form action="/signup" method="post" class="form-signup">
        <div class="header">
            <i class="fas fa-user-plus"></i>
            <h3>Sign Up please</h3>
        </div>
        {{ forms.input('Email', email, 'Email', 'email') }}
        {{ forms.input('Password', password, 'Password', 'password') }}
        {{ forms.input('RepeatPassword', repeatPassword, 'Repeat password', 'password') }}
        {% if errors %}
            <div class="alert alert-danger">
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
    </form>
{% endblock %}