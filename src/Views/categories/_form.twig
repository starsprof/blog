<form class="admin-category-form" action="/admin/categories/{{ path }}" method="post" enctype="multipart/form-data">
    {% if path=='edit' %}
        <input type="hidden" name="inputId" value="{{ category.getId }}">
    {% endif %}
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">Name: </label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="inputName" id="inputName" value="{{ category.getName }}" placeholder="Name">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputImage" class="col-sm-2 col-form-label">Picture : </label>
        <div class="custom-file col-sm-10">
            <input type="file" name="inputImage" class="custom-file-input" id="customFile">
            <label class="custom-file-label" for="customFile">Choose file</label>
        </div>
    </div>

    <div class="form-group row">
        <label for="inputDescription" class="col-sm-2 col-form-label">Description: </label>
        <div class="col-sm-10">
            <textarea class="form-control" name="inputDescription" id="inputDescription" rows="5" placeholder="Description">{{ category.getDescription }}</textarea>
        </div>
    </div>
    {% if errors is not empty %}
        <div class="alert alert-danger" role="alert">
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i> {{ button }} Category</button>
</form>
